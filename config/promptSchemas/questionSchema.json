{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "properties": {
      "id": { "type": "integer" },
      "text": { "type": "string", "minLength": 20 },
      "correctCount": { "type": "integer", "minimum": 1, "maximum": 3 },
      "certificationTitle": { "type": "string", "minLength": 5 },
      "topic": { "type": "string" },
      "topicSubarea": { "type": "string" },
      "difficulty": { "type": "string", "enum": ["easy", "medium", "hard"] },
      "options": {
        "type": "object",
        "properties": {
          "A": { "type": "string", "minLength": 1 },
          "B": { "type": "string", "minLength": 1 },
          "C": { "type": "string", "minLength": 1 },
          "D": { "type": "string", "minLength": 1 },
          "E": { "type": "string", "minLength": 1 }
        },
        "additionalProperties": false,
        "required": ["A", "B", "C", "D", "E"]
      },
      "answer": {
        "type": "object",
        "properties": {
          "correctOptions": {
            "type": "array",
            "items": { "type": "string", "enum": ["A", "B", "C", "D", "E"] },
            "minItems": 1,
            "maxItems": 3
          },
          "explanations": {
            "type": "object",
            "properties": {
              "A": { "type": "string", "minLength": 40 },
              "B": { "type": "string", "minLength": 40 },
              "C": { "type": "string", "minLength": 40 },
              "D": { "type": "string", "minLength": 40 },
              "E": { "type": "string", "minLength": 40 }
            },
            "additionalProperties": false,
            "required": ["A", "B", "C", "D", "E"]
          }
        },
        "required": ["correctOptions", "explanations"]
      }
    },
    "required": ["id", "text", "certificationTitle", "correctCount", "topic", "difficulty", "options", "answer"],
    "additionalProperties": false
  }
}
